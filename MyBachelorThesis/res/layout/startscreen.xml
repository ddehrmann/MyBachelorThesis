<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/bStartCurrentTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Current Trip" />

    <Button
        android:id="@+id/bStartManageTrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bStartCurrentTrip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Manage Trips" />

    <Button
        android:id="@+id/bStartMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bStartManageTrips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Simple Empty Map" />

    <Button
        android:id="@+id/bStartMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bStartMap"
        android:layout_below="@+id/bStartMap"
        android:layout_marginTop="15dp"
        android:text="Manage All Media" />

</RelativeLayout>